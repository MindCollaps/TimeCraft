{{define "content"}}
{{template "topdoc"}}

    <style>
        div#banner {
            background-color: #0288D1;
            height: 100px;
            box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.3);
        }

        #banner-content img {
            height: 45px;
            width: 50px;
        }

        #banner-right a {
            font-size: 17px;
            margin-right: 2rem;
            text-decoration: none;
        }

        .dropdown-menu a:hover {
            color: #0288D1;
        }

        .btn-custom {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            background-color: white;
            color: #0288D1;
            box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.1);
            padding: 15px;
            font-size: 20px;
            font-weight: bold;
            transition: background-color 0.3s, color 0.3s;
            width: 500px;
            height: 500px;
            border: none;
            cursor: pointer;
        }

        .btn-custom:hover {
            background-color: #0289d121;
            color: white;
        }

        .btn-custom .btn-text {
            margin-bottom: 10px;
        }

        .buttons-container {
            display: flex;
            justify-content: center;
            gap: 100px;
            margin-top: 140px;
            height: calc(100vh - 100px);
        }
    </style>
</head>

<body style="background-color:#DFEBF2;">
<div id="banner" class="d-flex align-items-center justify-content-between">
